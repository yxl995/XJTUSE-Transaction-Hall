page {
	background-color: rgb(240, 242, 249);
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 20rpx 0;
}

view {
	display: flex;
}

.top {
	width: 90%;
	flex-direction: column;
	border-bottom: 2rpx dashed gray;
}

.title {
	font-size: 40rpx;
	font-weight: 500;
	margin: 20rpx 0;
}


.date {
	color: rgb(168, 157, 157);
	font-size: 26rpx;
	margin-bottom: 20rpx;
}

.content {
	width: 90%;
	white-space: pre-line;
	/* word-break:break-all; */
	margin: 30rpx 0;
}