.body {
	width: 100vw;
	background-color: rgb(240, 242, 249);
	display: flex;
	flex-direction: column;
	align-items: center;
}

.pubTitle {
	background-color: rgb(50, 141, 235);
	width: 100%;
	font-size: 40rpx;
	padding: 15rpx 70rpx;
	color: white;
	white-space: pre-wrap;
}

.box {
	width: 90%;
	display: flex;
	flex-direction: column;
	background-color: white;
	box-sizing: border-box;
	padding: 0 40rpx;
	border-radius: 15rpx;
	box-shadow: 5rpx 5rpx 10rpx 1rpx #cccccc;
	margin: 50rpx 0;
}

.top_box {
	display: flex;
	margin-top: 40rpx;
	margin-bottom: 10rpx;
}

.info {
	font-size: 34rpx;
	margin: 10rpx 0;
}

.head {
	width: 40%;
	background-color: white;
	position: relative;
}

.right {
	display: flex;
	flex-direction: column;
	justify-content: space-evenly;
	margin-left: 40rpx;
}

.info_box {
	width: 88%;
	margin: 30rpx 0;
	box-shadow: 5rpx 5rpx 10rpx 1rpx #cccccc;
	border-radius: 15rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	box-sizing: border-box;
	background-color: white;
	padding: 30rpx 40rpx;
}

.base {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.img {
	width: 160rpx;
	height: 160rpx;
	border-radius: 15rpx;
	box-shadow: 5rpx 5rpx 10rpx 1rpx #cccccc;
	margin: 10rpx 0;
	background-color: white;
	text-align: center;
	box-sizing: border-box;
	color: rgb(158, 154, 154);
	font-size: 140rpx;
	line-height: 140rpx;
	font-weight: 600;
	position: relative;
}

image {
	width: 100%;
	height: 100%;
	border-radius: 15rpx;
}

.red {
	position: absolute;
	top: 2rpx;
	right: 2rpx;
	width: 40rpx;
	height: 40rpx;
	border-radius: 40rpx;
	background-color: red;
	font-size: 28rpx;
	font-weight: 400;
	color: white;
	line-height: 38rpx;
	box-shadow: 1rpx 1rpx 5rpx 1rpx black;
}

.shadow {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	background-color: black;
	border-radius: 15rpx;
	opacity: 0;
}

.row {
	width: 100%;
	margin: 10rpx 0;
	display: flex;
}

.bottom {
	display: flex;
	width: 100%;
	justify-content: space-between;
	align-items: center;
	font-size: 24rpx;
}

.isUse {
	color: #3e8bf3;
}

.notUse {
	color: gray
}

.detail {
	width: 20%;
	text-align: center;
	background-color: #3e8bf3;
	color: white;
	font-size: 24rpx;
	padding: 5rpx;
	border-radius: 20rpx;
}

.more {
	width: 100%;
	margin: 10rpx 0;
}

.button {
	justify-content: center;
	margin-top: 100rpx;
	border-radius: 40rpx;
	background-color: rgb(50, 141, 235);
	color: white;
}

.button_hover {
	background-color: rgb(26, 96, 167);
}

.shadow_hover {
	opacity: 0.3;
}

.detail_hover {
	background-color: #1c5aac;
}