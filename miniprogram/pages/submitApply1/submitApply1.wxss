.body {
	width: 100vw;
	height: 100vh;
	background-color: rgb(240, 242, 249);
	display: flex;
	flex-direction: column;
	align-items: center;
	box-sizing: border-box;
	position: relative;
}

form {
	width: 90%;
	padding: 25rpx 0;
}

.input {
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 100%;
	height: 90rpx;
	background-color: white;
	line-height: 90rpx;
	box-sizing: border-box;
	padding: 0 40rpx;
	border-radius: 45rpx;
	box-shadow: 5rpx 5rpx 10rpx 1rpx #cccccc;
	margin: 50rpx 0;
}

input {
	width: 70%;
}

.button1,
.button2 {
	justify-content: center;
	margin-top: 100rpx;
	border-radius: 40rpx;
}

.button1 {
	background-color: rgb(50, 141, 235);
	color: white;
}

.button2 {
	background-color: rgb(200, 203, 209);
	color: black;
}

.button_hover1 {
	background-color: rgb(26, 96, 167);
}

.button_hover2 {
	background-color: rgb(160, 164, 170);
}

.shadow {
	width: 100vw;
	height: 100vh;
	background-color: rgba(255, 255, 255, 0.7);
	position: absolute;
	top: 0;
}

.hide {
	display: none;
}

.check {
	width: 85%;
	display: flex;
	flex-direction: column;
	align-items: center;
	box-shadow: 5rpx 5rpx 10rpx 1rpx #cccccc;
	border-radius: 10rpx;
	position: absolute;
	top: 70rpx;
	background-color: white;
	padding: 40rpx;
}

.info {
	width: 100%;
	margin: 40rpx 0;
	font-size: 28rpx;
	white-space: pre-wrap;
}