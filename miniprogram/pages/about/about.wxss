page {
  background-color: rgb(240, 242, 249);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.img {
  width: 25%;
  display: flex;
  align-items: center;
  margin: 60rpx;
}

.box {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border-radius: 15rpx;
  box-shadow: 5rpx 5rpx 10rpx 1rpx #cccccc;
  box-sizing: border-box;
  padding: 40rpx 60rpx;
  margin: 20rpx 0;
}

.textbox {
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 34rpx;
  margin: 20rpx 0;
}