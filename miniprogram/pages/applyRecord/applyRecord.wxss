page {
	background: rgb(240, 242, 249);
}

.body {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 20rpx 0;
	position: relative;
}

.box {
	width: 85%;
	margin: 30rpx 0;
	padding: 30rpx 0;
	padding-left: 50rpx;
	box-shadow: 5rpx 5rpx 10rpx 1rpx #cccccc;
	border-radius: 15rpx;
	display: flex;
	justify-content: space-evenly;
	align-items: center;
	box-sizing: border-box;
	background-color: white;
}

.box_hover {
	box-shadow: 0rpx 0rpx 1rpx 1rpx #cccccc;
}

.info {
	flex: 9;
	display: flex;
	flex-direction: column;
}

.bottom {
	display: flex;
	width: 100%;
	justify-content: space-between;
	font-size: 24rpx;
}

.time {
	width: 100%;
	font-size: 34rpx;
}

.isUse {
	color: #3e8bf3;
}

.notUse {
	color: #f52525;
}

.arrow {
	flex: 1;
	text-align: center;
}