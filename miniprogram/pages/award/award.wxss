page {
	background: rgb(240, 242, 249);
}

.body {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 20rpx 0;
}

.box {
	width: 88%;
	margin: 30rpx 0;
	box-shadow: 5rpx 5rpx 10rpx 1rpx #cccccc;
	border-radius: 15rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	box-sizing: border-box;
	background-color: white;
	padding: 30rpx 40rpx;
}

.img {
	width: 160rpx;
	height: 160rpx;
	border-radius: 15rpx;
	box-shadow: 5rpx 5rpx 10rpx 1rpx #cccccc;
	margin: 10rpx 0;
	background-color: white;
	text-align: center;
	box-sizing: border-box;
	color: rgb(158, 154, 154);
	font-size: 140rpx;
	line-height: 140rpx;
	font-weight: 600;
	position: relative;
}

.img image {
	width: 100%;
	height: 100%;
	border-radius: 15rpx;
}

.info {
	width: 70%;
	display: flex;
	flex-direction: column;
}

.bottom {
	display: flex;
	width: 100%;
	justify-content: space-between;
	align-items: center;
	font-size: 24rpx;
}

.row {
	width: 100%;
	margin: 10rpx 0;
	display: flex;
}

.isUse {
	color: #3e8bf3;
}

.notUse {
	color: #f52525;
}

.detail {
	width: 20%;
	text-align: center;
	background-color: #3e8bf3;
	color: white;
	font-size: 24rpx;
	padding: 5rpx;
	border-radius: 20rpx;
}

.base {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.more {
	width: 100%;
	margin: 10rpx 0;
}

.red {
	position: absolute;
	top: 2rpx;
	right: 2rpx;
	width: 40rpx;
	height: 40rpx;
	border-radius: 40rpx;
	background-color: red;
	font-size: 28rpx;
	font-weight: 400;
	color: white;
	line-height: 38rpx;
	box-shadow: 1rpx 1rpx 5rpx 1rpx black;
}

.detail_hover {
	background-color: #1c5aac;
}

.shadow {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	background-color: black;
	border-radius: 15rpx;
	opacity: 0;
}

.shadow_hover {
	opacity: 0.3;
}