.body {
	width: 100vw;
	height: 100vh;
	background-color: rgb(240, 242, 249);
	display: flex;
	flex-direction: column;
	align-items: center;
	box-sizing: border-box;
	position: relative;
}

.img {
	width: 30%;
	margin-top: 80rpx;
	margin-bottom: 50rpx;
}

image {
	width: 100%;
}

.button {
	width: 50%;
	display: flex;
	font-size: 40rpx;
	padding: 20rpx 0;
	justify-content: center;
	margin-top: 100rpx;
	border-radius: 80rpx;
	background-color: rgb(50, 141, 235);
	color: white;
}

.success {
	width: 80%;
	display: flex;
	flex-direction: column;
	margin-top: 40rpx;
}

.info {
	width: 100%;
	margin: 5rpx 0;
	font-size: 28rpx;
	display: flex;
	justify-content: flex-start;
	align-items: center;
}

.is_use,
.not_use {
	height: 36rpx;
}

.is_use {
	color: rgb(62, 139, 243);
}

.not_use {
	color: rgb(245, 37, 37);
}

.button_hover {
	background-color: rgb(26, 96, 167);
}