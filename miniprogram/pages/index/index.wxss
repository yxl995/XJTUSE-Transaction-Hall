page {
	background-color: rgb(240, 242, 249);
}

view {
	box-sizing: border-box;
}

.body {
	width: 100vw;
	display: flex;
	flex-direction: column;
	align-items: center;
	box-sizing: border-box;
	position: relative;
}

swiper {
	width: 90%;
	margin: 20rpx;
}

.function {
	width: 100%;
	display: flex;
	justify-content: space-evenly;
	align-items: center;
	padding: 20rpx 0;
	margin: 20rpx 0;
	background-color: white;
}

.function .box {
	width: fit-content;
	display: flex;
	flex-direction: column;
	align-items: center;
	position: relative;
}

.function image {
	width: 100%;
	margin-bottom: 10rpx;
}

.news_list {
	width: 94%;
	margin: 20rpx;
	padding: 0 20rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	background-color: white;
	border-radius: 25rpx;
}

.news_list .title {
	width: 100%;
	border-bottom: 3rpx dashed gray;
	padding: 20rpx 0;
	margin: 20rpx 10rpx;
	font-size: 40rpx;
	display: flex;
	align-items: center;
}

.news_list .box {
	width: 100%;
	margin: 10rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.blue_block {
	background-color: rgb(76, 160, 232);
	width: 20rpx;
	height: 50rpx;
	display: flex;
	margin-right: 30rpx;
}

.dot {
	width: 10rpx;
	height: 10rpx;
	background-color: black;
	border-radius: 10rpx;
}